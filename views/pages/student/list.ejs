<%- include('../../fragments/header.ejs') %>
    <main>
        <h2>Lista studentów</h2>
        <table class="table-list">
            <thead>
                <tr>
                    <th>Imię</th>
                    <th>Nazwisko</th>
                    <th>E-mail</th>
                    <th>Numer</th>
                    <th>Akcje</th>
                </tr>
            </thead>
            <tbody>
            <% for (let student of students) { %>
                <tr>
                    <td><%= student.firstName %></td>
                    <td><%= student.lastName %></td>
                    <td><%= student.email %></td>
                    <td><%= student.studentAlias %></td>
                    <td>
                        <ul class="list-actions">
                            <li><a href="/students/details/<%=student._id%>" class="list-actions-button-details">Szczegóły</a></li>
                            <li><a href="/students/edit/<%=student._id%>" class="list-actions-button-edit">Edytuj</a></li>
                            <li><a href="/students/delete/<%=student._id%>" class="list-actions-button-delete">Usuń</a></li>
                        </ul>
                    </td>
                </tr>
            <% } %>
            </tbody>
        </table>
        <p><a href="/student/add" class="button-add" class="<%= navLocation == 'student' ? 'active' : ''%>">Dodaj nowego studenta</a></p>
        <p></p>
    </main>
<%- include('../../fragments/footer.ejs') %>

