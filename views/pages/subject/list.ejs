<%- include('../../fragments/header.ejs') %>
<main>
    <h2>Lista przedmiotów</h2>
    <table class="table-list">
        <thead>
        <tr>
            <th>Nazwa</th>
            <th>Skrót</th>
            <th>Semestr</th>
            <th>Akcje</th>
        </tr>
        </thead>
        <tbody>
        <% for (let s of subject) { %>
            <tr>
                <td><%= s.name %></td>
                <td><%= s.subjectAlias %></td>
                <td><%= s.semester %></td>
                <td>
                    <ul class="list-actions">
                        <li><a href="/subject/details/<%=s._id%>" class="list-actions-button-details">Szczegóły</a></li>
                        <li><a href="/subject/edit/<%=s._id%>" class="list-actions-button-edit">Edytuj</a></li>
                        <li><a href="/subject/delete/<%=s._id%>" class="list-actions-button-delete">Usuń</a></li>
                    </ul>
                </td>
            </tr>
        <% } %>
        </tbody>
    </table>
    <p><a href="/subject/add" class="button-add" class="<%= navLocation == 'subject' ? 'active' : ''%>">Dodaj nowy przedmiot</a></p>
    <p></p>
</main>
<%- include('../../fragments/footer.ejs') %>

